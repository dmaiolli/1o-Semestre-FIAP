package classes;

public class ProdutoTeste {
	
	public static void main(String[] args) {
			
		Produto p1 = new Produto("Notebook");
//		p1.nome = "Notebook";
		p1.preco = 4356.89;
		p1.desconto = 0.25;
		
		var p2 = new Produto();
		p2.nome = "Caneta Preta";
		p2.preco = 12.56;
		p2.desconto = 0.29;
		
		System.out.println(p2.nome);
		System.out.println(p1.nome);
		
		double precoFinal = p1.precoComDesconto();
		double precoFinal2 = p2.precoComDesconto();
		double media = (precoFinal + precoFinal2) / 2;
		
		System.out.printf("O preço do %s é de R$ %.2f\n", p1.nome, precoFinal);
		System.out.printf("O preço do %s é de R$ %.2f\n", p2.nome, precoFinal2);
		System.out.printf("A média total do carrinho é de R$ %.2f", media);
	}

}
