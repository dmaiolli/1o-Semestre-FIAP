package ex02;

public class Data {

	private int dia;
	private int mes;
	private String mesExtenso;
	private int ano;

	public Data(int dia, int mes, String mesExtenso, int ano) {
		if (dia < 1 || dia > 31 || mes < 1 || mes > 12 || ano < 1900) {
			this.dia = 01;
			this.mes = 01;
			this.ano = 0001;
		} else {
			this.dia = dia;
			this.mes = mes;
			this.ano = ano;
		}
	}

	public int getDia() {
		return dia;
	}

	public void setDia(int dia) {
		if (dia >= 1 && dia <= 31) {
			this.dia = dia;
			
		}
	}

	public int getMes() {
		return mes;
	}

	public void setMes(int mes) {
		if (mes >= 1 && mes <= 12) {
			this.mes = mes;
		}
	}

	public String getMesExtenso() {
		return mesExtenso;
	}

	public void setMesExtenso(String mesExtenso) {
		this.mesExtenso = mesExtenso;
	}

	public int getAno() {
		if (dia >= 1 && dia <= 31) {
			this.dia = dia;
		}
	}

	public void setAno(int ano) {
		this.ano = ano;
	}
	
}